---
import FloatingButton from "../components/FloatingButton.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Mouse Hover Showcase</title>
	</head>
	<body class="relative overflow-x-hidden">
		<div
			aria-hidden="true"
			class="fixed inset-0 bg-[linear-gradient(to_right,#394554_1px,transparent_1px),linear-gradient(to_bottom,#394554_1px,transparent_1px)]
			bg-[size:32px_32px]
			[mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_80%,transparent_100%)]
			opacity-40 pointer-events-none z-0"
		>
		</div>

		<FloatingButton />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100dvh;
		background: linear-gradient(to bottom right, #1e293b, #0f172a);
		color: #f1f5f9;
		font-family: system-ui, sans-serif;
	}
</style>
