---
import { cursors } from "../constants/cursors";
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout>
  <main class="relative z-10 w-full flex flex-col items-center text-center py-12 gap-12 px-4">
    <h1 class="text-neutral-100 text-5xl font-bold max-w-3xl text-pretty leading-tight">
      Hover over each card to explore different CSS cursor styles ðŸ’»
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 px-8 lg:px-0 w-full max-w-4xl">
      {
        cursors.map((card) => (
          <Card title={card.title} classname={card.classname} />
        ))
      }
    </div>
  </main>
</Layout>
